<html>

<head>
    <style>
      body {
        margin: 0px;
        padding: 0px;
      }
    </style>
</head>
  <body>
  	<div>
    	<canvas id="goodArea" width="500" height="250" ></canvas>
	</div>

	<div>
    	<canvas id="neutralArea" width="500" height="150"></canvas>
	</div>

	<div >
    	<canvas id="badArea" width="500" height="250"></canvas>
    </div>

    <div id='d1' style="position:absolute; top:0px; left:0px; z-index:1">
    	<canvas id="candidate" width="100" height="100"></canvas>
    </div>


    <script>
      var canvas = document.getElementById('goodArea');
      var context = canvas.getContext('2d');

      context.beginPath();
      context.rect( 0, 0, canvas.width, canvas.height);
      context.fillStyle = 'lightblue';
      context.fill();

      var neutralArea = document.getElementById('neutralArea');
      var context = neutralArea.getContext('2d');

      context.beginPath();
      context.rect( 0, 0, canvas.width, canvas.height);
      context.fillStyle = '#888888';
      context.fill();


      var canvas = document.getElementById('badArea');
      var context = canvas.getContext('2d');

      context.beginPath();
      context.rect( 0, 0, canvas.width, canvas.height);
      context.fillStyle = 'pink';
      context.fill();

      var c = document.getElementById("candidate");
      var ctx = c.getContext("2d");
      ctx.beginPath();
      ctx.arc(50 ,50,45,0,2*Math.PI);
      ctx.lineWidth = 5;
      ctx.stroke();

      var thumbnail = new Image();
	  thumbnail.src = 'https://farm9.staticflickr.com/8712/buddyicons/107496845@N05_r.jpg?1426564871#107496845@N05'; 
	  thumbnail.width = c.width;
	  thumbnail.height = c.height ; 
	  thumbnail.onload = function(){
	      var pattern = ctx.createPattern(this, "repeat");
	      ctx.fillStyle = pattern;
	      ctx.fill();
	  };


      </script>
  </body>
